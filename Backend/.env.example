# Environment variables for HARVEST Backend
# Copy this file to .env and fill in your actual values

# Application Configuration
DEBUG=False
HOST=0.0.0.0
PORT=8000
SECRET_KEY=your-super-secret-key-here-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:8080"]

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/harvest_db
# For SQLite (development): DATABASE_URL=sqlite:///./harvest.db
# For MySQL: DATABASE_URL=mysql+pymysql://username:password@localhost:3306/harvest_db
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Redis Cache Configuration
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600

# External APIs
WEATHER_API_KEY=your-openweathermap-api-key
WEATHER_API_URL=https://api.openweathermap.org/data/2.5
MARKET_API_KEY=your-market-data-api-key
MARKET_API_URL=https://api.marketdata.com/v1

# SMS Service (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Translation Service (Google Cloud)
GOOGLE_TRANSLATE_API_KEY=your-google-translate-api-key
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# Machine Learning Configuration
MODEL_PATH=ml/models/
MODEL_UPDATE_INTERVAL=24

# File Storage
UPLOAD_PATH=data/uploads/
MAX_FILE_SIZE=10485760

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/harvest.log

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30

# Scheduler Configuration
SCHEDULER_TIMEZONE=UTC

# Email Configuration (Optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Development/Testing
TEST_DATABASE_URL=sqlite:///./test_harvest.db

# Production Security (Set these in production)
CORS_ORIGINS=["https://your-frontend-domain.com"]
SECURE_COOKIES=True
HTTPS_ONLY=True

# Monitoring and Analytics (Optional)
SENTRY_DSN=your-sentry-dsn-for-error-tracking
PROMETHEUS_ENABLED=False